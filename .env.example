# SaiV Environment Configuration
# Copy to .env and fill in values

# ============ Backend (FastAPI) ============
# Supabase - get from https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# OpenAI (optional; leave empty to use free Gemini only)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# Google Gemini - FREE, no credit card (https://aistudio.google.com/apikey)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash

# AI provider: "auto" (try OpenAI then Gemini) | "gemini" | "openai"
AI_PROVIDER=auto

# Embeddings (OpenAI or local fallback)
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
EMBEDDING_FALLBACK_TO_LOCAL=true

# Processing limits
MAX_PDF_PAGES=100
MAX_CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_RETRIEVAL_CHUNKS=5

# Debug
DEBUG=false

# ============ Frontend (Next.js) ============
# Only set if backend runs on different host
# NEXT_PUBLIC_API_URL=http://localhost:8000
